import { $page } from "@torpor/build/state";

export default function Error() {
	@render {
		<div class="error-page">
			<:head>
				<title>{$page.status}</title>
			</:head>

			@if ($page.status === 404) {
				<h2>Not found!</h2>
			} else {
				<h2>{$page.error.message || $page.status}</h2>
			}
		</div>
	}
}
