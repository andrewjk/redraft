/**
 * Displays a list of errors from a server action
 */
export default function FormErrors($props: { errors: Record<string, string> }) {
	@render {
		<div>
			@if ($props.errors) {
				<ul class="error-messages">
					@for (let key of Object.keys($props.errors)) {
						<li>{key} {$props.errors[key]}</li>
					}
				</ul>
			}
		</div>
	}
}
