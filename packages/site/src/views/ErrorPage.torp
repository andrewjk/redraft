import { $page } from "@torpor/build/state";

export default function ErrorPage() {
	@head {
		<title>{$page.status}</title>
	}

	@render {
		<div class="error-page">
			@if ($page.status === 404) {
				<h2>Not found!</h2>
			} else {
				<h2>{$page.error?.message || $page.status}</h2>
			}
		</div>
	}
}
